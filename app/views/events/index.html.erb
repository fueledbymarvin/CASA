	<div id="header">
		<div id="slideshow">
			<div id="pictures">
				<% @slides.each_with_index do |slide, i| %>
					<%= image_tag slide.photo.url(:display), class: "pic", id: "pic#{i+1}" %>
				<% end %>
			</div>

			<img id="nextpic" name="nextpic" src="<%= asset_path 'change pic button.png' %>" alt="Next Picture" onMouseOver="nextpic.src='<%= asset_path 'change pic hover.png' %>'" onMouseOut="nextpic.src='<%= asset_path 'change pic button.png' %>'">
		</div>

		<div id="contact">
			<div id="subscribe">
				<%= form_tag("", method: :post) do %>
					<%= email_field_tag "email", nil, placeholder: "you.should@do.it" %>
					<%= submit_tag %>
				<% end %>
			</div>
			<div id="contactlinks">
				<div class="contactbutton">
					<a href="http://www.facebook.com/groups/2200024806/" target="_blank"><img src="<%= asset_path 'facebook hover.png' %>" alt="Facebook" /></a>
					<div class="contacthover facebook"><a href="http://www.facebook.com/groups/2200024806/"><img src="<%= asset_path 'facebook button.png' %>" alt="Facebook" /></a></div>
				</div>

				<div class="contactbutton">
					<a href="mailto:yale.casa@gmail.com"><img src="<%= asset_path 'gmail hover.png' %>" alt="Gmail" /></a>
					<div class="contacthover gmail"><a href="mailto:yale.casa@gmail.com"><img src="<%= asset_path 'gmail button.png' %>" alt="Gmail" /></a></div>
				</div>

				<div class="contactbutton">
					<a href="http://www.yale.edu" target="blank"><img src="<%= asset_path 'yale hover.png' %>" alt="Yale" /></a>
					<div class="contacthover yale"><a href="http://www.yale.edu"><img src="<%= asset_path 'yale button.png' %>" alt="Yale" /></a></div>
				</div>
			</div>
		</div>

		<img id="topdivider" src="<%= asset_path 'top divider.png' %>" alt="The Chinese American Students Association of Yale University">
	</div>

	<div id="content">
		<% if @events.any? %>
			<% @events.each do |event| %>
				<%= render event %>
		  <% end %>
		<% else %>
			<h1 class="title">No upcoming events.</h1>
			<br />
		<% end %>

	    <p class="contentnav"><a href="/list">View All Events</a></p>
	</div>
